<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif"
        android:text="ÇALIŞAN EKRANI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_giris"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/calisan_randevu"
        android:layout_below="@+id/calisan_randevu"
        android:layout_marginTop="33dp"
        android:background="?android:attr/statusBarColor"
        android:text="STOK EKRANI"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/calisan_randevu"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_baslik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="?android:attr/statusBarColor"
        android:text="Randevularımı GÖSTER"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/calisan_cikis"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btn_giris"
        android:layout_below="@+id/btn_giris"
        android:layout_marginTop="43dp"
        android:background="?android:attr/statusBarColor"
        android:text="Çıkış Yap"
        android:textColor="@color/white" />
</RelativeLayout>
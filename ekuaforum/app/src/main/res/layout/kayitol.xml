<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/colorAccent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
  >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Adınız"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_ad"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Soyadınız"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_soyad"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Telefon numaranız"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_eposta"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Şifreniz"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_telefon"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="E-posta adresiniz"
            android:inputType="textEmailAddress" />


        <Button
            android:id="@+id/btn_olustur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_sifre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/bg_gradient_end"
            android:onClick="kullanicieklee"
            android:text="Hesabımı Oluştur" />

    </LinearLayout>


</RelativeLayout>